<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/corPrincipal</item>
        <item name="colorPrimaryDark">@color/corPrincipalEscura</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Código sem barra de status -->
    <!-- Se for usá-lo, criar um toolbar_layout -->
    <style name="AppSemBarra" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/corPrincipal</item>
        <item name="colorPrimaryDark">@color/corPrincipalEscura</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
